<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/mainMenu">

    <fragment
            android:id="@+id/mainMenu"
            android:name="io.vendator.dav.calculate.fragments.MainMenu"
            android:label="fragment_main_menu"
            tools:layout="@layout/fragment_main_menu">
        <action
                android:id="@+id/action_mainMenu_to_gameFragment"
                app:destination="@id/gameFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
                android:id="@+id/action_mainMenu_to_statsFragment"
                app:destination="@id/statsFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
            android:id="@+id/gameFragment"
            android:name="io.vendator.dav.calculate.fragments.GameFragment"
            android:label="fragment_game"
            tools:layout="@layout/fragment_game">
        <argument
                android:name="difficultyLevel"
                android:defaultValue="2"/>
    </fragment>
    <fragment
            android:id="@+id/statsFragment"
            android:name="io.vendator.dav.calculate.fragments.StatsFragment"
            android:label="fragment_stats"
            tools:layout="@layout/fragment_stats"/>
</navigation>